<?xml version="1.0"?>
<project version="1">
    <!-- CmdGPT C++ Static Analysis Configuration -->
    
    <!-- Paths to check -->
    <paths>
        <dir name="."/>
    </paths>
    
    <!-- Exclude directories -->
    <exclude>
        <path name="build/"/>
        <path name="docs/"/>
        <path name=".git/"/>
        <path name=".github/"/>
    </exclude>
    
    <!-- Suppressions -->
    <suppressions>
        <!-- System headers we don't control -->
        <suppression>missingIncludeSystem</suppression>
        
        <!-- False positives from macro usage -->
        <suppression>unknownMacro</suppression>
        <suppression>unmatchedSuppression</suppression>
        
        <!-- Not all headers are always available -->
        <suppression>missingInclude</suppression>
        
        <!-- Internal cppcheck report -->
        <suppression>checkersReport</suppression>
        
        <!-- Functions may be used in other translation units -->
        <suppression>unusedFunction</suppression>
        
        <!-- Style preferences that don't affect correctness -->
        <suppression>useStlAlgorithm</suppression>
        <suppression>unusedStructMember</suppression>
        
        <!-- Test assertions that verify enum values -->
        <suppression>knownConditionTrueFalse</suppression>
    </suppressions>
    
    <!-- C++ Standard -->
    <standards>
        <c version="c11"/>
        <cpp version="c++17"/>
    </standards>
    
    <!-- Enable all checks -->
    <checking>
        <misra enabled="false"/>
    </checking>
</project>